<%- include("../partials/header") %>

<div class="container mt-5">
	<div class = "row justify-content-center ">
		<div class="col-md-12 text-center">
			<h1> Add new Comment to <%= campground.name %> </h1>
		</div>
		<div class ="col-xs-12 col-md-6">
			<form action="/campgrounds/<%= campground._id %>/comments" method="POST">
			<div class="form-group">
				<label for="comment">Comment</label>
				<input class="form-control" type="text" name="comment[text]" id="comment" placeholder="Great place" >
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-dark btn-block"> Submit </button>
			</div>
			</form>				
			
		<a href="/campgrounds">Go back to campgrounds page</a>
		</div>
		
	</div>

</div>


<%- include("../partials/footer") %>
