<%- include("../partials/header") %>

<div class="container mt-5">
	<div class = "row justify-content-center">
		<div class="col-md-12 text-center">
			<h1> Edit Comment </h1>
		</div>
		<div class="col-xs-12 col-md-6">
			<form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<label for="comment">Comment</label>
				<input class="form-control" type="text" value="<%=comment.text%>" id="comment" name="comment[text]">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-dark btn-block"> Submit </button>
			</div>
			</form>				
			
		<a href="/campgrounds">Go back to campgrounds page</a>
		</div>
		
	</div>

</div>


<%- include("../partials/footer") %>
