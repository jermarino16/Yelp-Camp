<%- include("../partials/header") %>

<div class="container mt-3">
	<header class="jumbotron">
		<div class="container">
			<h1 class="text-primary">
				Welcome to YelpCamp!
			</h1>
			<p>
				View our campgrounds from all over the globe!
			</p>
			<a class="btn btn-md btn-primary" href="/campgrounds/new">Add a new campground</a>	
		</div>
	</header>
	<div class="row">
		<div class="col-lg-12">
			<h3>
				Our most popular campgrounds
			</h3>
		</div>
	</div>
	<div class="row" style="display:flex; flex-wrap: wrap;">
		<% campgrounds.forEach(function(campground){ %>
			<div class="col-lg-3 col-md-4 col-sm-6 mb-4">
				<div class="thumbnail">	
					<div class="card">
					  <img src="<%= campground.image%>" class="card-img-top" alt="<%= campground.name %>">
					  <div class="card-body">
						<h5 class="card-title"><%= campground.name %></h5>
						<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
					</div>
				</div>
				</div>
			</div>
		<% }); %>
	</div>
</div>
<%- include("../partials/footer") %>