<%- include("../partials/header") %>

<div class="container">
	<div class = "row">
		<h1 style="text-align: center">
			Edit <%= campground.name %>
		</h1>
		<div style="width: 30%; margin: 30px auto;">
			<form action="/campgrounds/<%= campground._id %>/?_method=PUT" method="POST">
			<div class="form-group">
				<label for="campground[name]">Name</label>
				<input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>" >
			</div>
			<div class="form-group">
				<label for="campground[image]">Image</label>
				<input class="form-control" type="text" name="campground[image]" value="<%= campground.image %>">
			</div>
			<div class="form-group">
				<label for="campground[cost]">Cost</label>
  				<input class="form-control" type="number" name="campground[cost]"  value="<%= campground.cost %>">
			</div>
			<div class="form-group">
				<label for="campground[description]">Description</label>
				<input class="form-control" type="text" name="campground[description]" value="<%= campground.description %>">
			</div>
			<div class="form-group">
				<label for="campground[location]">Location</label>
				<input class="form-control" type="text" name="campground[location]" id="location" value="<%= campground.location %>">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-default btn-block"> Submit </button>
			</div>
			</form>				
			
		<a class="btn btn-lg btn-primary" href="/campgrounds">Go back to campgrounds page</a>
		</div>
		
	</div>

</div>


<%- include("../partials/footer") %>
