<%- include("../partials/header") %>

<div class="container">
	<div class = "row justify-content-center">
		<div class="col-md-12 text-center mt-3">
			<h1> Edit <%= campground.name %> </h1>
		</div>
		<div class ="col-xs-12 col-md-6">
			<form action="/campgrounds/<%= campground._id %>/?_method=PUT" method="POST">
			<div class="form-group">
				<label for="name">Name</label>
				<input class="form-control" type="text" name="campground[name]" id="name" value="<%= campground.name %>" >
			</div>
			<div class="form-group">
				<label for="image">Image</label>
				<input class="form-control" type="text" name="campground[image]" id="image" value="<%= campground.image %>">
			</div>
			<div class="form-group">
				<label for="cost">Cost</label>
  				<input class="form-control" type="number" name="campground[cost]" id="cost" value="<%= campground.cost %>">
			</div>
			<div class="form-group">
				<label for="description">Description</label>
				<input class="form-control" type="text" name="campground[description]" id="description" value="<%= campground.description %>">
			</div>
			<div class="form-group">
				<label for="location">Location</label>
				<input class="form-control" type="text" name="campground[location]" id="location" value="<%= campground.location %>">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-dark btn-block"> Submit </button>
			</div>
			</form>				
			
		<a href="/campgrounds">Go back to campgrounds page</a>
		</div>
		
	</div>
</div>

<%- include("../partials/footer") %>
