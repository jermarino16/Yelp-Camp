<%- include("../partials/header") %>

<div class="container">
	<div class = "row justify-content-center mt-5">
		<div class="col-md-12 text-center">
			<h1> Create a new campground </h1>
		</div>
		<div class ="col-xs-12 col-md-6">
			<form action="/campgrounds" method="POST">
			<div class="form-group">				
				<label for="name">Name</label>
				<input class="form-control" type="text" name="name" id="name" placeholder="John Doe" >
			</div>
			<div class="form-group">
				<label for="image">Image</label>
				<input class="form-control" type="text" name="image" placeholder="https://unsplash.com/whatever">
			</div>
			<div class="form-group">
				<label for="cost">Cost</label>
  				<input class="form-control" type="number" name="cost" placeholder="46.16" step="0.01" min="0" required>
			</div>
			<div class="form-group">
				<label for="description">Description</label>
				<input class="form-control" type="text" name="description" placeholder="Great Views">
			</div>
			<div class="form-group">
				<label for="location">Location</label>
				<input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, CA">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-dark btn-block"> Submit </button>
			</div>
			</form>				
			
		<a href="/campgrounds">Go back to campgrounds page</a>
		</div>
	</div>
</div>


